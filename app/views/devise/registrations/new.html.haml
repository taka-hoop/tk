%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field-name
    = f.label :nickname
    %br/
    = f.text_field :nickname, autofocus: true, maxlength: "8"
  .field-mail
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", class:"email"
  .field-pass
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password",class:"pas"
  .field-confi
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", class:"conf"
  .actions
    = f.submit "Sign up", class:"up"
= render "devise/shared/links"
